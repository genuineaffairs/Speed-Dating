<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:labelFor="@id/dobPicker"
        android:text="Looking For Someone?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/lookSomeoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:onClick="finishAccSetup"
        android:text="Next" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:labelFor="@id/dobPicker"
        android:text="or..."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/topicBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:labelFor="@id/dobPicker"
        android:text="Choose A Topic?"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/topicBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"


        android:text="Next" android:onClick="finishAccSetup"/>





</RelativeLayout>
